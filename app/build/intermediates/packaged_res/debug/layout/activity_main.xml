<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“± Taskwarrior Mobile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#2196F3" />

    <!-- Add Task -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="#E3F2FD"
        android:elevation="2dp">

        <EditText
            android:id="@+id/newTaskInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="What needs to be done?"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Controls -->
    <Button
        android:id="@+id/refreshButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Refresh Tasks"
        android:textSize="16sp"
        android:padding="14dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <!-- Task List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <TextView
            android:id="@+id/taskOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading tasks..."
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:padding="16dp" />

    </ScrollView>

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ“ Terminal Build | Taskwarrior Mobile"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#757575"
        android:layout_marginTop="8dp" />

</LinearLayout>
